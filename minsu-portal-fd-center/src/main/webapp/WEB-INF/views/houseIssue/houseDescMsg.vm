#override("title")
房源 - 描述信息
#end
#override("inHeader")
<!-- 自定义css -->
<link rel="stylesheet" href="${staticResourceUrl}/css/manage/m_miaoshu.css$!{VERSION}">	
<script type="text/javascript" src="${staticResourceUrl}/js/manage/m_miaoshu.js$!{VERSION}"></script>
